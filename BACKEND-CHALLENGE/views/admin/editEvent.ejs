<%- include('../partial/header.ejs'); %>
<%- include('../partial/navbaradmin.ejs'); %>
<div class="container">
  <hr>
  <div class="card">
    <div class="card-header">
      <h2>Nova vaga</h2>
    </div>
    <div class="card-body">
      <form method="POST" action="/admin/event/update">
        <input type="hidden" value="<%=event.id%>" name="id">
        <input class="form-control" type="text" name="title" placeholder="<%=event.title%>">
        <br>
        <textarea class="form-control"  name="body" id="event"><%-event.body%></textarea>
        <br>

        <br>
        <button class="btn btn-dark">Atualizar</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partial/footer.ejs'); %>

<script src="/tinymce/tinymce.min.js">
</script>

<script>
  tinymce.init({
    language:'pt_BR',
    selector:"#event",
    plugins: [
    'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
    ]
  })
</script>
